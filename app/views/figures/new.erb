<p> Create a figure</p>
<br>
<form method="POST" action="/figures/new">

  <label> Name: </label> <input type="text" name="figure[name]" id="figure_name">

  <label> Figure Titles: </label>
  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
  <%end%>

  <br><br>

  <p> Create new title: </p>
  <input type="text" id="new_title" name="title[name]">

  <br>

  <label> Landmarks: </label>
    <% @landmarks.each do |landmark| %>
    <%= landmark.name %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]"
     value="<%= landmark.id %>">
    <%end%>

    <h2> Create New Landmark </h2>

    <input type="text" name="landmark[name]" id="new_landmark" placeholder="name" >
    <input type="text" name="landmark[year_completed]" placeholder="Year completed">
  <input type="submit" value="Create New Figure">
</form>
