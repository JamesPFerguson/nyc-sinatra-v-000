<h1> Edit Figure</h1>
<br>
<form method="POST" action="/figures/<%=@figure.id%>/edit">
   <input type="hidden" name="_method" value="PATCH">

  <label><b> Name: </b></label> <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <br><br>

  <h3> Figure Titles: </h3>
  <% @titles.each do |title| %>
  <label> <%=title.name%></label>
  <input type="checkbox" name="figure[title_ids]" id="title_<%=title.id%>" value="<%=title.id%>"
   <%= 'checked' if @figure.titles.include?(title)%>> </input>
  <br>
  <%end%>

  <br><br>

  <h3> Create New Title: </h3>
  <input type="text" id="new_title" name="title[name]">

  <br>

  <h3> Landmarks: </h3>
  <br>
    <% @landmarks.each do |landmark| %>
    <%= landmark.name %>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids]"
     value="<%= landmark.id %>"  <%= 'checked' if @figure.landmarks.include?(landmark)%>> </input>
     <br>
    <%end%>

    <h2> Create New Landmark </h2>

    <input type="text" name="landmark[name]" id="new_landmark" placeholder="name" >
    <input type="text" name="landmark[year_completed]" placeholder="Year completed">
  <input type="submit" value="Edit Figure">
</form>
